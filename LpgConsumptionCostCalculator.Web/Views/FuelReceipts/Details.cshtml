            @Html.DisplayNameFor(model => model.Comment)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Comment)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-outline-dark btn-sm" })
    <input class="btn btn-outline-dark btn-sm" type="button" value="Delete" id="@Model.Id" onclick="DeleteFuelReceipts(this.id)">
    @Html.ActionLink("Back to List", "Index", new { id = Model.FueledCarId }, new { @class = "btn btn-outline-dark btn-sm" })
</p>

<!-- Modal -->
<div id="deleteModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                ...
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
    function DeleteFuelReceipts(id) {
        $.get("@Url.Action("Delete","FuelReceipts")/" + id,
            function (data) { $('.modal-body').html(data); })
        $('#deleteModal').modal('show');
    }

    $('#deleteModal').on('hidden.bs.modal', function (e) {
        $('.modal-body').html("")
    })
    </script>
}