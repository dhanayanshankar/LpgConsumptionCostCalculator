@model IEnumerable<LpgConsumptionCostCalculator.Data.Models.Car>
@using LpgConsumptionCostCalculator.Data.Models
@{
    ViewBag.Title = "List of cars";
    var queryOptions = (QueryOptions)ViewBag.QueryOptions;
}


<h1 class="display-4">@ViewBag.Title</h1>

@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-outline-dark" })
<p></p>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.BuildSortableLink("Producer", "Index", "CarProducer", queryOptions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarProductionYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LpgInstallationProducer)
            </th>
            <th>
                @ViewBag.Title
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <b>@Html.DisplayFor(modelItem => item.CarProducer)</b>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CarModel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CarProductionYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LpgInstallationProducer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LpgInstallationModel)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-outline-dark btn-sm" })
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-dark btn-sm" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-dark btn-sm" })
                </td>
            </tr>
        }
    </tbody>

</table>
