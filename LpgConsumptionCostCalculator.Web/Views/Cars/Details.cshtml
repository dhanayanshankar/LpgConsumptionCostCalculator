@model LpgConsumptionCostCalculator.Data.Models.Car

<div>
    <h3>@Html.DisplayFor(model => model.CarProducer) @Html.DisplayFor(model => model.CarModel) details</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CarProducer)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CarProducer)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CarModel)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CarModel)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CarProductionYear)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CarProductionYear)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LpgInstallationProducer)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LpgInstallationProducer)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LpgInstallationModel)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LpgInstallationModel)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-outline-dark btn-sm" })
    <input class="btn btn-outline-dark btn-sm" type="button" value="Delete" id="@Model.Id" onclick="DeleteCars(this.id)">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-dark btn-sm" })
</p>

<!-- Modal -->
<div id="deleteModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                ...
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
    function DeleteCars(id) {
        $.get("@Url.Action("Delete","Cars")/" + id,
            function (data) { $('.modal-body').html(data); })
        $('#deleteModal').modal('show');
    }

    $('#deleteModal').on('hidden.bs.modal', function (e) {
        $('.modal-body').html("")
    })
    </script>
}